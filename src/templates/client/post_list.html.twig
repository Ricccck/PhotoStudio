<!DOCTYPE html>

<html>
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8"/>
		<link href="css/common.css" rel="stylesheet" type="text/css"/>
		<link href="css/postList.css" rel="stylesheet" type="text/css"/>
		<title>PhotoStudio</title>
	</head>

	<body>
		{% include 'common/header.html.twig' %}

		<div id="contents">
			<h1 class="title">
				投稿画像一覧
			</h1>

			<div id="post-list">
				<ul>
					{% for value in photoArr %}
						<li class="item">
							<div>
								<div class="item-title">
									{{value.photo_title}}
								</div>
								<div class="item-img">
									<img src="{{constant('Photostudio\\lib\\Bootstrap::APP_URL')}}public/upload/{{value.photo_url}}" alt="{{value.photo_title}}">
								</div>
								<div class="item-category">
									<div>カテゴリー</div>
									<div id="img-category" class="info-str">
										{{value.category}}
									</div>
								</div>
								<div id="item-tags">
									<div>タグ</div>
									<div id="tags">
										{% for val in value.tags %}
											<div class="img-tag">{{val}}</div>
										{% endfor %}
									</div>
								</div>
								<div id="item-price">
									<div>価格</div>
									<div id="img-price" class="info-str">
										¥<span id="price">{{value.price}}</span>-
									</div>
								</div>
								<div class="btn-div">
									<form method="post">
										<input type="hidden" name="photo_id" value="{{value.photo_id}}">
										{% if value.is_deleted is even %}
											<a href="{{constant('Photostudio\\lib\\Bootstrap::APP_URL')}}cart.php?crt_id={{value.photo_id}}">
												<input type="submit" value="非公開にする">
											</a>
										{% else %}
											<a href="{{constant('Photostudio\\lib\\Bootstrap::APP_URL')}}cart.php?crt_id={{value.photo_id}}">
												<input type="submit" value="公開にする">
											</a>
										{% endif %}
									</form>
								</div>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</body>
	</body>
</html>
