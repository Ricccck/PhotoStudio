<!DOCTYPE html>

<html>
	<head>
		<meta charset="utf-8"/>
		<meta
		name="viewport" content="width=device-width, initial-scale=1">

		{# Bootstrap #}
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

		{# favicon #}
		<link
		rel="icon" href="/public/favicon-black.ico"/>

		{# javascript #}
		<script src="js/changeFavicon.js"></script>
		<script src="https://yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>

		{# css #}
		<link href="css/common.css" rel="stylesheet" type="text/css"/>
		<link
		href="css/cart.css" rel="stylesheet" type="text/css"/>

		{# title #}
		<title>PhotoStudio -購入カート-</title>
	</head>

	<body>
		{% include 'common/header.html.twig' %}

		<div id="contents">
			<h1 class="title">
				購入カート
			</h1>

			<form method="post" id="cart-body">
				<div id="cart-list">
					<ul>
						{% for value in crtArr %}
							<li class="item">
								<div class="item-checkbox">
									<input type="checkbox" name="crt_ids[]" value="{{value.crt_id}}">
								</div>
								<div class="item-img">
									<a href="detail.php?photo_id={{value.photo_id}}">
										<img src="public/sample/{{value.sample_url}}" alt="{{value.photo_title}}">
									</a>
								</div>
								<div class="item-title">
									<div>タイトル</div>
									<div>
										{{value.photo_title}}
									</div>
								</div>
								<div class="item-price">
									<div>金額</div>
									<div>
										¥<span class="price">{{value.price}}</span>-
									</div>
								</div>
								<div class="delete-btn-div">
									<a href="cart.php?crt_id={{value.crt_id}}">
										<input type="button" value="削除">
									</a>
								</div>
							</li>
						{% endfor %}
					</ul>
				</div>
				<div id="total-div">
					<div id="total-price">
						<div>合計金額</div>
						¥<span id="price">{{totalPrice}}</span>-
					</div>
					<div id="purchase-btn-div">
						<input type="submit" name="purchase" value="購入する">
					</div>
				</div>
			</form>
		</div>

		{% include 'common/footer.html.twig' %}

		<script src="js/addCommas.js"></script>

		{# Bootstrap #}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"/>
	</body>
</html>
